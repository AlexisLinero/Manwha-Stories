@model ManwhaStories.Models.Producto

<h2>Agregar Producto</h2>

<form asp-action="GuardarProductoEInventario" method="post">
    <!-- Campo para el nombre del producto -->
    <div class="form-group">
        <label for="Nombre">Nombre del Producto</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!-- Campo para la descripción del producto -->
    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <!-- Campo para el precio del producto -->
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <!-- Campo para el descuento del producto -->
    <div class="form-group">
        <label for="Descuento">Descuento</label>
        <input asp-for="Descuento" type="number" class="form-control" />
        <span asp-validation-for="Descuento" class="text-danger"></span>
    </div>

    <!-- Campo para la categoría del producto -->
    <div class="form-group">
        <label for="IdCategoria">Categoría</label>
        <input asp-for="IdCategoria" class="form-control" type="number" min="1" step="1" placeholder="Ingrese el ID de la categoría" />
        <span asp-validation-for="IdCategoria" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
