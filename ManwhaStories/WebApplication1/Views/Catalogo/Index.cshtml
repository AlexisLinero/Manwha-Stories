@model IEnumerable<ManwhaStories.Models.Producto>
@{
    ViewData["Title"] = "Catálogo - Manwha Stories";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin: 10px 0;
            transition: box-shadow 0.3s;
            text-align: center;
        }

            .product-card:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-price {
            color: #ff5722;
            font-size: 1.2em;
            font-weight: bold;
        }

        .button-container {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .btn-symmetric {
            background-color: #ff5722;
            color: white;
            width: 100%;
            text-align: center;
            font-size: 0.9em;
            padding: 8px 0;
            border-radius: 5px;
            border: none;
        }

            .btn-symmetric:hover {
                background-color: #e64a19;
                color: white;
                text-decoration: none;
            }

        .button-container form {
            width: 50%;
            margin: 0;
        }

        .button-container a {
            width: 50%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Catálogo de Productos</h2>

        @if (TempData["MensajeConfirmacion"] != null)
        {
            <div class="alert alert-success">
                @TempData["MensajeConfirmacion"]
            </div>
        }

        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-md-4">
                    <div class="product-card">
                        <img src="@producto.URL" alt="@producto.Nombre" class="product-image" />
                        <h3>@producto.Nombre</h3>
                        <p>@producto.Descripcion.Substring(0, Math.Min(producto.Descripcion.Length, 100))...</p>
                        <p class="product-price">Precio: $@producto.Precio</p>
                        <div class="button-container">
                            <a href="@Url.Action("Descripcion", "Catalogo", new { id = producto.Id_Producto })" class="btn-symmetric">Ver Detalles</a>

                            <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post">
                                <input type="hidden" name="id" value="@producto.Id_Producto" />
                                <button type="submit" class="btn-symmetric">Añadir al Carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
